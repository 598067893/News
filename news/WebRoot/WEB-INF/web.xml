<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	
	<!--  01.配置登录的servlet-->
	<servlet>
	 <servlet-name>loginSerlvet</servlet-name>
	 <servlet-class>cn.bdqn.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	 <servlet-name>loginSerlvet</servlet-name>
	 <url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<!-- 02.配置所有新闻集合的servlet -->
	<servlet>
	 <servlet-name>listServlet</servlet-name>
	 <servlet-class>cn.bdqn.servlet.ListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	 <servlet-name>listServlet</servlet-name>
	 <url-pattern>/listServlet</url-pattern>
	</servlet-mapping>
	
	<!-- 03.配置删除对应的servlet  -->
	<servlet>
	 <servlet-name>delServlet</servlet-name>
	 <servlet-class>cn.bdqn.servlet.DelServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	 <servlet-name>delServlet</servlet-name>
	 <url-pattern>/delServlet</url-pattern>
	</servlet-mapping>
	<!-- 04.配置查询指定id的servlet  -->
	<servlet>
	 <servlet-name>findServlet</servlet-name>
	 <servlet-class>cn.bdqn.servlet.FindServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	 <servlet-name>findServlet</servlet-name>
	 <url-pattern>/findByIdServlet</url-pattern>
	</servlet-mapping>
	<!-- 05.配置查询指定id的servlet  -->
	<servlet>
	 <servlet-name>updateServlet</servlet-name>
	 <servlet-class>cn.bdqn.servlet.UpdateServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	 <servlet-name>updateServlet</servlet-name>
	 <url-pattern>/updateServlet</url-pattern>
	</servlet-mapping>
	<!-- 06.配置查询所有的新闻类型  -->
	<servlet>
	 <servlet-name>FindCategoryServlet</servlet-name>
	 <servlet-class>cn.bdqn.servlet.FindCategoryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	 <servlet-name>FindCategoryServlet</servlet-name>
	 <url-pattern>/FindCategoryServlet</url-pattern>
	</servlet-mapping>
	<!-- 07.配置新增新闻  -->
	<servlet>
	 <servlet-name>addServlet</servlet-name>
	 <servlet-class>cn.bdqn.servlet.AddServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	 <servlet-name>addServlet</servlet-name>
	 <url-pattern>/addServlet</url-pattern>
	</servlet-mapping>
	
	
	
	
	
	
	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
